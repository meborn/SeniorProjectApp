  #sign_in_container {
    width:100%;
    height:600px;
    background-color: #e9573f;
    padding-top: 50px;
  }

  #forgot_password_wrapper{
   padding-top: 10px;
  }
  #forgot_password_wrapper a{
    color:#f2f2f2;
