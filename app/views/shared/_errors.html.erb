
        
<% if flash[:success] %>
    <div class="row pad_col">
        <div class="col-xs-12">
            <div class="alert alert-success" role="alert">
                <%= flash[:success].html_safe %>
            </div>
        </div>
    </div>
<% end %>
<% if flash[:error] %>
    <div class="row pad_col">
        <div class="col-xs-12">
           <div class="alert alert-danger" role="alert">
                <%= flash[:error].html_safe %>
            </div> 
        </div>
    </div>
    
<% end %>
                
            
	