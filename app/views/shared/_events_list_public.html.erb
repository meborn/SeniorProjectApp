<div id="quick_look_today" class="panel panel-default">

		<div class="panel-heading">
			<h2 class="panel-title sans_serif_bold dark_text dashboard_header">
				<%= @day.strftime('%A') %><br/>
				<span class="panel_sub_title">
					<%= @day.strftime('%B %d, %Y') %>
				</span>
			</h2>
			<%= link_to "&#43 Opening".html_safe, new_user_opening_path, :class=> 'dashboard_link'%>
		</div>
		<ul class="list-group">
			<% if !@schedule.empty? %>
				<% @schedule.each do |s| %>
					
						<%= render :partial => 'shared/list_item/list_item_opening_public.html.erb', :locals => {:e => s} %>
					
				<% end %>
			<% else %>
				<li class="list-group-item">
					<div class="alert alert-danger">
						No events today.
					</div>
				</li>
			<% end %>
		</ul>
</div>