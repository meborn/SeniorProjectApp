<% if @appointment.owner == @user %>
	<h1><%= @appointment.profile.title %></h1>
	<p><strong>Date: </strong><%= @appointment.start.strftime('%B %d, %Y') %></p>
	<p><strong>Time: </strong><%= @appointment.start.strftime('%I:%M') %> - <%= @appointment.end.strftime('%I:%M %p') %></p>
	<%= link_to @appointment.client.name, users_path(@appointment.client) %>
<% else %>

<% end %>


