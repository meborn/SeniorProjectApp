<section id="appointment_show_section_1">
	<div class="container">
		<div class="row pad_top">
			<div class="col-xs-12 col-md-8">
				<div class="ninja_panel panel panel-default">
					<div class="panel-heading">
						<h1 class="panel-title sans_serif_bold dark_text inline_heading header_padding">Appointment</h1>
						<button class="btn btn-default dashboard_link" id="swal_delete_appointment">
							Cancel
						</button>
					</div>
					<div class="panel-body text-center">
						<% if @appointment.profile.avatar.content_type %>
							<%= image_tag @appointment.profile.avatar.url(:thuumb), :class => 'img-circle avatar_big' %>
						<% else %>
							<div class="no_profile_avatar a_profile_color profile_color_<%= @appointment.profile.id %>"></div>
						<% end %>
						<p class= "text-center sans_serif_bold dark_text"><%= link_to @appointment.profile.title, profile_path(@appointment.profile), :class => "sans_serif_bold dark_text ninja_link"%></p>
						<h3 class="sans_serif_bold dark_text text-center"><%= @appointment.start.strftime('%A') %></h3>
						<h5 class="sans_serif_bold dark_text text-center"><%= @appointment.start.strftime('%m/%d/%Y') %></h5>
						<p class="sans_serif_bold orange_text text-center"><%= @appointment.start.strftime('%I:%M') %> - <%= @appointment.end.strftime('%I:%M %p') %></p>
					</div>
				</div>
			</div>
			<div class="col-xs-12 col-md-4">
				<%= render :partial => "shared/events_list.html.erb" %>
			</div>
		</div>
	</div>
</section>
