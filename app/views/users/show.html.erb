<div id="user_content" class="row">
	<div class="col-xs-12">
		<div class="row">
			<div class="col-xs-8">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2 class="panel-title dashboard_header">Today's Schedule</h2>
						<%= link_to "View Openings", user_openings_path, :class => "btn btn-info btn-xs dashboard_link" %>
					</div>
					<div class="panel-body">
						<table class="table">
							<thead>
								<tr>
									<th colspan="3"><%= @today_start.strftime('%B %d, %Y') %></th>
								</tr>
							</thead>
							<tbody>
								<% @openings.each do |opening| %>
										<% if appointment = Appointment.where(:opening => opening).first %>
											<tr>
												<td>
													<strong><%= appointment.profile.title %></strong>
													<p><%= appointment.user.email %></p> 
												</td>
												<td>
													<%= opening.start.strftime('%I:%M') %> - <%= opening.end.strftime('%I:%M %p') %>
												</td>
												<td>
													<%= link_to "View", user_profile_appointment_path(appointment.profile, appointment) %>
												</td>
											</tr>	
										<% else %>
											<tr class="success">
												<td>
													<strong>Available</strong>
												</td>
												<td>
													<%= opening.start.strftime('%I:%M') %> - <%= opening.end.strftime('%I:%M %p') %>
												</td>
												<td></td>
											</tr>
										<% end %>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
				
				
			</div>
			<div class="col-xs-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2 class="panel-title dashboard_header">My Profiles</h2>
						<%= link_to "Create Profile &#43;".html_safe, new_user_profile_path, :class => "btn btn-info btn-xs dashboard_link" %>
					</div>
					<div class="panel-body">
						<ul class="list-group">
							<% @profiles.each do |profile| %>
								<%= link_to user_profile_path(profile) do %>
									<li class="list-group-item">
										<% if profile.avatar.content_type %>
											<%= image_tag profile.avatar.url(:thuumb) %>
										<% end %>
										<strong><%= profile.title %></strong>
										<p><%= link_to "View Appointments", user_profile_appointments_path(profile) %></p>
									</li>
								<% end %>
							<% end %>
						</ul>
					</div>
					
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-8">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2 class="panel-title dashboard_header">Today's Appointments</h2>
					</div>
					<div class="panel-body">
						<table class="table">
							<thead>
								<tr>
									<th colspan="3"><%= @today_start.strftime('%B %d, %Y') %></th>
								</tr>
							</thead>
							<tbody>
								<% @appointments.each do |appointment| %>
										<% if appointment.opening.start.to_i >= @today_start.to_i && appointment.opening.start.to_i <= @today_end.to_i %>
											<tr>
												<td>
													<strong><%= appointment.profile.title %></strong>
												</td>
												<td>
													<%= appointment.opening.start.strftime('%I:%M') %> - <%= appointment.opening.end.strftime('%I:%M %p') %>
												</td>
												<td>
													<%= link_to "View", user_profile_appointment_path(appointment.profile, appointment) %>
												</td>
											</tr>	
										<% end %>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

