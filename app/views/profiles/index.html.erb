<section id="profile_index_section_1">
	<div class="container">
		<div class="row">
			<div id="profile_search_form" class="col-xs-12">
				<% if @bad_zip %>
						<h2 class="sans_serif_bold">Invalid Zip Code</h2>
				<% else %>
					<% if !@no_zip %>
						<h2 class="sans_serif_bold"><%= @city %>, <%= @state %></h2>
					<% end %>
				<% end %>
				<form class="form-inline" method="get" action="/profiles">
					<div class="input-group pad_top">
						<input type="text" name="zip" class="form-control input-lg" placeholder="Enter Zip Code">
						<div class="input-group-addon">
							<span class="glyphicon glyphicon-search"></span>
						</div>
					</div>
					
					<button type="submit" class="btn btn-default btn-lg my_btn pad_top">Find Me!</button>				
				</form>
			</div>
		</div>
		<div class="row pad_top">
			<div class="col-xs-12">
				<% if flash[:success] %>
					<div class="alert alert-success" role="alert">
						<%= flash[:success] %>
					</div>
				<% end %>
				<% if flash[:error] %>
					<div class="alert alert-danger" role="alert">
						<%= flash[:error] %>
					</div>
				<% end %>
			</div>
			<% @profiles.each do |profile| %>
				<div class="col-xs-12 col-md-4 col-lg-3 pad_top">
					<%= link_to profile_path(profile), :class => "glyph_color profile_color_#{profile.id}" do %>
					<div class="quick_action">
						<% if profile.avatar.content_type %>
							<%= image_tag profile.avatar.url(:small), :class => 'img-circle avatar_xl' %>
						<% else %>
							<div class="avatar_xl a_profile_color profile_color_<%= profile.id %>"></div>
						<% end %>
						<h5 class="sans_serif_bold text-center"><%= profile.title %></h5>
						<h5 class="sans_serif_bold text-center"><%= profile.city %>, <%= profile.state %></h5>
					</div>
					<% end %>
				</div>
			<% end %>
			
		</div>
	</div>
</section>


