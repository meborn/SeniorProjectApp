<section id="profile_show_section_1">
	<div class="container">
		<% if flash[:success] %>
			<%= render :partial => 'shared/errors.html.erb' %>
		<% end %>
		<div class="row pad_top">
			<div class="col-xs-12">
				<div class="ninja_panel profile_panel panel panel-default">
					<div class="panel-heading">
						<h1 class="panel-title sans_serif_bold inline_heading"><%= @profile.title %></h1>
						<% if @profile.user == @user %>
							<%= link_to "Edit Profile", edit_user_profile_path(@profile), :class =>'btn btn-default dashboard_link' %>
						<% elsif @is_client &&  %>
							<%= link_to "View Openings", profile_openings_path(@profile), :class =>'btn btn-default dashboard_link' %>
						<% else %>
							<% if @client %>
								<%= form_for [@profile, @client] do |f| %>
									<%= f.submit "Client Request", :class => 'btn btn-default dashboard_link'%>
								<% end %>
							<% else %>
								<a href="#" class="btn btn-default dashboard_link">Pending Client Approval</a>
							<% end %>
							
						<% end %>
					</div>
					<div class="panel-body">
						<% if @profile.avatar.content_type %>
							<%= image_tag @profile.avatar.url(:small), :class => 'img-circle avatar_xl' %>
						<% else %>
							<div class="avatar_xl a_profile_color profile_color_<%= @profile.title.gsub(/\s+/,"")%>"></div>
						<% end %>
						<h5 class="sans_serif_bold text-center profile_location">Location: <%= @profile.city %>, <%= @profile.state %></h5>
						<p><%= @profile.description %></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

